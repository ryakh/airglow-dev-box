#!/usr/bin/env puma

# CHANGEME - change this to match your setup
directory '/host/Code/airglow-api'

daemonize
pidfile '/tmp/airglow.pid'
state_path '/tmp/airglow.state'
bind 'unix:///tmp/airglow.sock'

# CHANGEME - change this to match your setup
stdout_redirect '/host/Code/airglow-api/log/puma.log', '/host/Code/airglow-api/log/puma_error.log'
